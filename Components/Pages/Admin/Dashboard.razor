@page "/admin"
@using Cardle.Data
@using Cardle.Models
@using Cardle.Services
@using Microsoft.EntityFrameworkCore
@inject AppDbContext DbContext
@inject NavigationManager NavManager
@inject AuthService AuthService
@rendermode InteractiveServer

<div class="main-layout fade-in">
    <div class="admin-wrapper">
        
        <div class="fixed-header">
            <button class="signal-btn left" @onclick="GoHome"></button>
            <h1>ADMIN PANELƒ∞</h1>
            <button class="add-btn" @onclick="GoToAdd">‚ûï Yeni Ekle</button>
        </div>

        <div class="scrollable-content">
            @if (!AuthService.IsAdmin)
            {
                <div class="error-box">‚õî Buraya eri≈üim yetkin yok.</div>
            }
            else
            {
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Yƒ±l</th>
                                <th class="action-col">ƒ∞≈ülem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in cars)
                            {
                                <tr>
                                    <td>@car.Brand</td>
                                    <td>@car.Model</td>
                                    <td class="action-cell">
                                        <button class="edit-btn" @onclick="() => EditCar(car)">‚úèÔ∏è</button>
                                        <button class="delete-btn" @onclick="() => DeleteCar(car)">üóëÔ∏è</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    :root { --bg-color: #121212; }

    .main-layout {
        height: 100vh;
        width: 100%;
        background-color: var(--bg-color);
        display: flex;
        justify-content: center; 
        overflow: hidden; 
    }

    .admin-wrapper {
        width: 100%;
        max-width: 800px; 
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    
    .fixed-header {
        flex-shrink: 0;
        padding: 20px;
        background-color: var(--bg-color);
        z-index: 10;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #333;
    }

    .scrollable-content {
        flex-grow: 1;
        overflow-y: auto;
        padding: 20px;
        padding-bottom: 50px;
    }

    .scrollable-content::-webkit-scrollbar { width: 8px; }
    .scrollable-content::-webkit-scrollbar-track { background: #121212; }
    .scrollable-content::-webkit-scrollbar-thumb { background: #333; border-radius: 4px; }

    h1 { margin: 0; color: #3498db; font-size: 1.5rem; text-transform: uppercase; font-weight: bold; }

    .table-wrapper { background: #1e1e1e; border-radius: 10px; overflow: hidden; border: 1px solid #333; }
    table { width: 100%; border-collapse: collapse; color: white; }
    th { background: #252525; padding: 15px; text-align: left; color: #888; font-weight: bold; position: sticky; top: 0; }
    td { padding: 15px; border-bottom: 1px solid #333; }
    tr:last-child td { border-bottom: none; }
    tr:hover { background-color: #252525; }

    .signal-btn { width: 40px; height: 40px; border: none; background: transparent center/contain no-repeat; cursor: pointer; transition: transform 0.2s; }
    .signal-btn:hover { transform: scale(1.1); }
    .signal-btn.left { background-image: url('/images/icons/signal-left-off.svg'); }

    .add-btn { background: #2ecc71; color: white; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-weight: bold; transition: transform 0.2s; }
    .add-btn:hover { background: #27ae60; transform: scale(1.05); }

    .action-cell { display: flex; gap: 10px; justify-content: flex-end; }
    .edit-btn { background: #f1c40f; color: black; border: none; padding: 8px 12px; border-radius: 6px; cursor: pointer; }
    .delete-btn { background: #c0392b; color: white; border: none; padding: 8px 12px; border-radius: 6px; cursor: pointer; }
    
    .error-box { background: #c0392b; padding: 20px; border-radius: 8px; text-align: center; color: white; font-weight: bold; }
    .fade-in { animation: fadeIn 0.6s ease forwards; opacity: 0; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
</style>

@code {
    private List<Car> cars = new List<Car>();

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAdmin) { NavManager.NavigateTo("/login"); return; }
        cars = await DbContext.Cars.OrderByDescending(c => c.Id).ToListAsync(); 
    }

    private void GoToAdd() { NavManager.NavigateTo("/admin/add-car"); }
    private void GoHome() { NavManager.NavigateTo("/"); }

    private void EditCar(Car car)
    {
        NavManager.NavigateTo($"/admin/edit-car/{car.Id}");
    }

    private async Task DeleteCar(Car car)
    {
        DbContext.Cars.Remove(car);
        await DbContext.SaveChangesAsync();
        cars = await DbContext.Cars.OrderByDescending(c => c.Id).ToListAsync(); 
    }
}